
@model STEnterprise.Models.UserDetail

@{
    ViewBag.Title = "User Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 >Add New User</h3>
<hr />

@using (Html.BeginForm("Save", "UserDetail", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    if (Model != null && Model.UserDetailId > 0)
    {
        @Html.HiddenFor(ui => ui.UserDetailId)
    }

    <div class="form-group">
        @Html.LabelFor(ui => ui.Username, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.TextBoxFor(ui => ui.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(ui => ui.Username, "", new { @class = "text-danger", @style = "color:red" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(ui => ui.Password, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.PasswordFor(ui => ui.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(ui => ui.Password, "", new { @class = "text-danger", @style = "color:red" })
            </div>
        </div>

    <div class="form-group">
        @Html.LabelFor(ui => ui.ConfirmPassword, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.PasswordFor(ui => ui.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(ui => ui.ConfirmPassword, "", new { @class = "text-danger", @style = "color:red" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
}
<div>
   <a class="popup btn btn-primary" href="/UserDetail/Index" style="margin-bottom:20px; margin-top:20px;">Back To List</a>
</div>