@model STEnterprise.Models.RoleInfo
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="color: red;">Delete This Role Informaton!</h3>
<hr/>

@using (Html.BeginForm("Delete", "RoleInfo", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()

    if (Model != null && Model.RoleId > 0)
    {
        @Html.HiddenFor(b => b.RoleId)
    }

    <div class="form-group">
        @Html.LabelFor(a => a.RoleName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.TextBoxFor(b => b.RoleName, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(b => b.RoleName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>
}


<div>
    <a class="popup btn btn-primary" href="/RoleInfo/Index" style="margin-bottom:20px; margin-top:20px;">Back To List</a>
</div>
