@model STEnterprise.Areas.Sale.Models.CustomerDetail
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Update Customer Information</h3>

<hr/>

@using (Html.BeginForm("Edit", "CustomerDetail", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()


    if (Model != null && Model.CustomerId > 0)
    {
        @Html.HiddenFor(b => b.CustomerId)
    }

    <div class="form-group">
        @Html.LabelFor(a => a.CustomerName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.TextBoxFor(Model => Model.CustomerName, new { @class = "form-control" })
            @*@Html.Label(" ", new { @class = "", id = "MessageForExistChekId" })*@
            @Html.ValidationMessageFor(b => b.CustomerName, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(a => a.CountryName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.DropDownListFor(
            x => x.CountryId,
            new SelectList(@ViewBag.CountryInfo, "CountryId", "CountryName","")
            , new { @class = "form-control" }
            )
            @Html.ValidationMessageFor(c => c.CountryId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.CustomerContactPerson, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.TextBoxFor(Model => Model.CustomerContactPerson, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.CustomerContactPerson, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.CustomerAddress, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.TextBoxFor(Model => Model.CustomerAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.CustomerAddress, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.CustomerContactNumber, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.TextBoxFor(Model => Model.CustomerContactNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.CustomerContactNumber, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.CustomerEmail, new {@class = "control-label col-sm-2"})
        <div class="col-sm-5">
            @Html.TextBoxFor(Model => Model.CustomerEmail, new {@class = "form-control"})
            @Html.ValidationMessageFor(a => a.CustomerEmail, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(ui => ui.IsActive, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.DropDownList("IsActive", new List<SelectListItem>()
                {
                    new SelectListItem { Text = "Active", Value = "true" },
                    new SelectListItem { Text = "Inactive", Value = "false" }
                }, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>

    <div class="form-group">
        <div class=" col-sm-offset-1 col-sm-2 ">
            <a class="popup btn btn-primary" href="/Sale/CustomerDetail/Index" style="margin-bottom:20px; margin-top:20px;">Back To List</a>
        </div>
    </div>
}
