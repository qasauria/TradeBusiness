@using GridMvc.Html
@model IEnumerable<STEnterprise.Areas.Admin.Models.DailyExpense>


@{
    ViewBag.Title = "Daily Expense Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    span.field-validation-error {
        color: red;
    }
</style>


<div class="code-cut">
    <a class="popup btn btn-primary" href="/Admin/DailyExpense/Save/0" style="margin-bottom:20px; margin-top:20px;">Add New Daily Expense</a>
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.ExpenseType).Titled("Expense Type").Sortable(true).Filterable(true);
    columns.Add(a => a.TotalAmount).Titled("Total Amount").Sortable(true).Filterable(true);
    columns.Add(a => a.PaidAmount).Titled("Paid Amount").Sortable(true).Filterable(true);
    columns.Add(a => a.DueAmount).Titled("Due Amount").Sortable(true).Filterable(true);
    columns.Add(a => a.Date).Titled("Date").Sortable(true).Filterable(true);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(a => Html.ActionLink("Edit", "Edit", new { id = a.DailyExpenseId, @class = "btn btn-primary" })).Titled("<span>Edit</span>");
    columns.Add()
   .Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(a => Html.ActionLink("Delete", "Delete", new { id = a.DailyExpenseId })).Titled("Delete");
}).WithPaging(10).Sortable(true)

</div>


