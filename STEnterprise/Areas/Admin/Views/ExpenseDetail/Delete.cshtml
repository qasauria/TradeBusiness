@model STEnterprise.Areas.Admin.Models.ExpenseDetail
@{
    ViewBag.Title = "Expense Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Delete Expense Type </h3>
<hr />



@using (Html.BeginForm("Delete", "ExpenseDetail", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()


    if (Model != null && Model.ExpenseDetailId > 0)
    {
        @Html.HiddenFor(b => b.ExpenseDetailId)
    }

    <div class="form-group">
        @Html.LabelFor(a => a.ExpenseType, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.TextBoxFor(Model => Model.ExpenseType, new { @class = "form-control", @disabled = "disabled", @style = "width: 400px" })
            @*@Html.Label(" ", new { @class = "", id = "MessageForExistChekId" })*@
            @Html.ValidationMessageFor(b => b.ExpenseType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>

    <div class="form-group">
        <div class=" col-sm-offset-1 col-sm-2 ">
            <a class="popup btn btn-primary" href="/Admin/ExpenseDetail/Index" style="margin-bottom:20px; margin-top:20px;">Back To List</a>
        </div>
    </div>
}


