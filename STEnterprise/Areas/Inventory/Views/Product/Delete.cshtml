
@model STEnterprise.Areas.Inventory.Models.Product

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h3>Delete Product Info</h3>
<hr/>

@using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    if (Model != null && Model.ProductId > 0)
    {
        @Html.HiddenFor(p => p.ProductId)
    }

    <div class="form-group">
        @Html.LabelFor(p => p.ProductName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(p => p.ProductName, "", new { @class = "text-danger", @style = "color:red" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.ProductDescription, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.TextBoxFor(p => p.ProductDescription, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(p => p.ProductDescription, "", new { @class = "text-danger", @style = "color:red" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.TotalBag, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.TextBoxFor(p => p.TotalBag, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(p => p.TotalBag, "", new { @class = "text-danger", @style = "color:red" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Stock, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.TextBoxFor(p => p.Stock, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(p => p.Stock, "", new { @class = "text-danger", @style = "color:red" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.IsActive, new { @class = "control-label col-sm-2" })
        <div class="col-sm-3">
            @Html.DropDownList("IsActive", new List<SelectListItem>()
                {
                    new SelectListItem { Text = "Active", Value = "true" },
                    new SelectListItem { Text = "Inactive", Value = "false" }
                }, new { @class = "form-control", disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>

    <div class="form-group">
        <div class=" col-sm-offset-1 col-sm-2 ">
            <a class="popup btn btn-primary" href="/Inventory/Product/Index" style="margin-bottom:20px; margin-top:20px;">Back To List</a>
        </div>
    </div>
}



