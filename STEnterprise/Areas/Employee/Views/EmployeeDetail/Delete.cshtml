
@model STEnterprise.Areas.Employee.Models.EmployeeDetail
@{
    ViewBag.Title = "Employee Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Employee Information</h2>



@using (Html.BeginForm("Delete", "EmployeeDetail", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()


    if (Model != null && Model.EmployeeId > 0)
    {
        @Html.HiddenFor(b => b.EmployeeId)
    }

    <div class="form-group">
        @Html.LabelFor(a => a.EmployeeName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.TextBoxFor(b => b.EmployeeName, new { @class = "form-control", @disabled = "disabled" })
            @*@Html.Label(" ", new { @class = "", id = "MessageForExistChekId" })*@
            @Html.ValidationMessageFor(b => b.EmployeeName, "", new { @class = "text-danger", @style = "color: red" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(a => a.DesignationName, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.DropDownListFor(
            x => x.DesignationId,
            new SelectList(@ViewBag.DesignationInfo, "DesignationId", "DesignationName"),
            "", new { @class = "form-control", @disabled = "disabled" }
            )
            @Html.ValidationMessageFor(c => c.DesignationId, "", new { @class = "text-danger", @style = "color: red" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.PresentAddress, new { @class = "control-label col-sm-2" })
