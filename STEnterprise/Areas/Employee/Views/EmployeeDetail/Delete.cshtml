            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger", @style = "color: red" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Age, new { @class = "control-label col-sm-2" })
        <div class="col-sm-5">
            @Html.TextBoxFor(a => a.Age, new { @class = "form-control", @disabled = "disabled" })
            @Html.ValidationMessageFor(a => a.Age, "", new { @class = "text-danger", @style = "color: red" })
