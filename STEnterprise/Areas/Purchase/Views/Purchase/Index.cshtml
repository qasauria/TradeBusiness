    $(function () {
        $("#PaymentMethod").change(function () {
            if ($(this).val() == "2") {
                $("#ChequePanel").show();
                $("#TTPanel").hide();
            }
            else if ($(this).val() == "3") {
                $("#TTPanel").show();
                $("#ChequePanel").hide();
            }
