
@using GridMvc.Html
@model IEnumerable<STEnterprise.Areas.Purchase.Models.TruckDetail>


@{
    ViewBag.Title = "Truck Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    span.field-validation-error {
        color: red;
    }
</style>

<div class="code-cut">
    <a class="popup btn btn-primary" href="/Purchase/TruckDetail/Save/0" style="margin-bottom:20px; margin-top:20px;">Add New Truck Detail</a>
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.ConsignmentNumber).Titled("Consignment Number").Sortable(true).Filterable(true);
    columns.Add(a => a.TruckNumber).Titled("Truck Number").Sortable(true).Filterable(true);
    columns.Add(a => a.TruckFare).Titled("Truck Fare").Sortable(true).Filterable(true);
    columns.Add(a => a.AdvancePayment).Titled("Advance Payment").Sortable(true).Filterable(true);
    columns.Add(a => a.LoadingCost).Titled("Loading Cost").Sortable(true).Filterable(true);
    columns.Add(a => a.UnloadingCost).Titled("Unloading Cost").Sortable(true).Filterable(true);
    columns.Add(a => a.OtherCost).Titled("Other Cost").Sortable(true).Filterable(true);
    columns.Add(a => a.UserStatus).Titled("Status").Sortable(true).Filterable(true);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(a => Html.ActionLink("Edit", "Edit", new { id = a.TruckDetailId, @class = "btn btn-primary" })).Titled("<span>Edit</span>");
    columns.Add()
   .Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(a => Html.ActionLink("Delete", "Delete", new { id = a.TruckDetailId })).Titled("Delete");
}).WithPaging(10).Sortable(true)

</div>

