@using GridMvc.Html
@model IEnumerable<STEnterprise.Areas.Purchase.Models.Supplier>


@{
    ViewBag.Title = "Supplier Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    span.field-validation-error {
        color: red;
    }
</style>

<div class="code-cut">
    <a class="popup btn btn-primary" href="/Purchase/Supplier/Save/0" style="margin-bottom:20px; margin-top:20px;">Add New Supplier</a>
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.SupplierName).Titled("Supplier Name ").Sortable(true).Filterable(true);
    columns.Add(a => a.SupplierAddress).Titled("Supplier Address").Sortable(true).Filterable(true);
    columns.Add(a => a.SupplierContactNo).Titled("Supplier Contact No").Sortable(true).Filterable(true);
    columns.Add(a => a.SupplierEmail).Titled("Supplier Email").Sortable(true).Filterable(true);
    columns.Add(a => a.UserStatus).Titled("Status").Sortable(true).Filterable(true);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(a => Html.ActionLink("Edit", "Edit", new { id = a.SupplierId, @class = "btn btn-primary" })).Titled("<span>Edit</span>");
    columns.Add()
   .Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(a => Html.ActionLink("Delete", "Delete", new { id = a.SupplierId })).Titled("Delete");
}).WithPaging(5).Sortable(true)

</div>
